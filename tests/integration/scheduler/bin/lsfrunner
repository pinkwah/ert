#!/usr/bin/env bash
job=$1

function handle_sigterm {
    # Torque uses (256 + SIGNAL) as the returncode
    # Fix this to whatever LSF does..
    # SIGTERM=15
    echo "1" > "${job}.returncode"
    echo ""
    kill $child_pid
    exit 1
}

trap handle_sigterm SIGTERM

echo "$$" > "${job}.pid"
bash "${job}.script" > "${job}.stdout" 2> "${job}.stderr" &
child_pid=$!
wait $child_pid

echo "$?" > "${job}.returncode"
